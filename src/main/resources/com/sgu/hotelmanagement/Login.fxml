<AnchorPane prefHeight="240.0" prefWidth="357.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sgu.hotelmanagement.GUI.LoginController">
    <children>
        <VBox alignment="CENTER" layoutX="29.0" layoutY="33.0" prefWidth="300.0" spacing="15.0" styleClass="container">
            <Label styleClass="h3" text="Đăng Nhập">
            <font>
               <Font name="System Bold" size="25.0" />
            </font></Label>

            <TextField fx:id="usernameField" promptText="Tên đăng nhập" />
            <PasswordField fx:id="passwordField" promptText="Mật khẩu" />

            <Button fx:id="loginButton" text="Đăng nhập" />
            <Hyperlink text="Quên mật khẩu?" />
        </VBox>
    </children>
</AnchorPane>
